<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.authentication.verifycode.VerifyCodeFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout_verify_code"
        style="@style/AuthenticationInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_enter_code"
            android:inputType="phone"
            tools:ignore="Autofill" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/button_verify_code"
        android:textAllCaps="false"
        android:textSize="20sp" />


</LinearLayout>